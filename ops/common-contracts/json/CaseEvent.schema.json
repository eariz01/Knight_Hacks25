{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "CaseEvent",
  "type": "object",
  "required": ["event_id", "case_id", "source", "received_at", "text"],
  "properties": {
    "event_id": { "type": "string" },
    "case_id": { "type": "string" },
    "source": { "enum": ["email", "sms", "portal", "call", "fax"] },
    "received_at": { "type": "string", "format": "date-time" },
    "actor": {
      "type": "object",
      "properties": {
        "role": { "enum": ["client", "adjuster", "opposing", "provider", "unknown"] },
        "name": { "type": "string" },
        "contact": { "type": "string" }
      },
      "additionalProperties": false
    },
    "text": { "type": "string" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "mime": { "type": "string" },
          "sha256": { "type": "string" },
          "size": { "type": "integer" },
          "uri":    { "type": "string" },
          "path":   { "type": "string" }    
        },
        "additionalProperties": false
      }
    },
    "entities": {
      "type": "object",
      "properties": {
        "dates": { "type": "array", "items": { "type": "string" } },
        "providers": { "type": "array", "items": { "type": "string" } },
        "deadlines": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string" },
              "source_phrase": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": true
    },
    "thread_key": { "type": "string" }
  },
  "additionalProperties": false
}
