{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "AuditLog",
  "type": "object",
  "required": ["audit_id","when","who","action","object","s3_ref","sha256"],
  "properties": {
    "audit_id": { "type": "string" },
    "when": { "type": "string", "format": "date-time" },
    "who": { "type": "string" },
    "action": { "type": "string" },
    "object": { "type": "string" },
    "why": { "type": "string" },
    "s3_ref": { "type": "string" },
    "sha256": { "type": "string" }
  },
  "additionalProperties": false
}
